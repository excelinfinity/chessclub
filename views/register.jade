doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title ChessClub | Registration Page
    // Tell the browser to be responsive to screen width
    meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
    // Bootstrap 3.3.7
    link(rel='stylesheet', href='bower_components/bootstrap/dist/css/bootstrap.min.css')
    // Font Awesome
    link(rel='stylesheet', href='bower_components/font-awesome/css/font-awesome.min.css')
    // Ionicons
    link(rel='stylesheet', href='bower_components/Ionicons/css/ionicons.min.css')
    // Theme style
    link(rel='stylesheet', href='css/AdminLTE.min.css')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    // Google Font
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic')
  body.hold-transition.register-page
    .register-box
      .register-logo
        a(href='index')
          b Chess
          | CLUB
      .register-box-body
        p.login-box-msg Register a new membership
        form(action='register', method='post')
          span(style="color:red") #{nameerr}
          .form-group.has-feedback
            input.form-control(type='text' name="name" value=name placeholder='Full name')
            span.glyphicon.glyphicon-user.form-control-feedback
          span(style="color:red") #{emailerr}
          .form-group.has-feedback
            input.form-control(type='email' name="email" value=email placeholder='xyz@worksap.co.jp')
            span.glyphicon.glyphicon-envelope.form-control-feedback
          span(style="color:red") #{passworderr}
          .form-group.has-feedback
            input.form-control(type='password' name="password" placeholder='Password')
            span.glyphicon.glyphicon-lock.form-control-feedback
          span(style="color:red") #{passterr}
          .form-group.has-feedback
            input.form-control(type='password' name="password2" placeholder='Retype password')
            span.glyphicon.glyphicon-log-in.form-control-feedback
          
          .row
            .col-xs-8
            // /.col
            .col-xs-4
              button.btn.btn-primary.btn-block.btn-flat(type='submit') Register
            // /.col
        a.text-center(href='login') I already have a membership
      // /.form-box
    // /.register-box
    // jQuery 3
    script(src='bower_components/jquery/dist/jquery.min.js')
    // Bootstrap 3.3.7
    script(src='bower_components/bootstrap/dist/js/bootstrap.min.js')
