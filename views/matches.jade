    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic')
  body.hold-transition.skin-blue.sidebar-mini
    .wrapper
      header.main-header
        // Logo
        a.logo(href='/')
          // mini logo for sidebar mini 50x50 pixels
          span.logo-mini
            b W
            | AP
          // logo for regular state and mobile devices
          span.logo-lg
            b CHESS
            | CLUB
        // Header Navbar: style can be found in header.less
        nav.navbar.navbar-static-top
          // Sidebar toggle button
          a.sidebar-toggle(href='#', data-toggle='push-menu', role='button')
            span.sr-only Toggle navigation
          .navbar-custom-menu
            ul.nav.navbar-nav
              // User Account: style can be found in dropdown.less
              li.dropdown.user.user-menu
                a.dropdown-toggle(href='#', data-toggle='dropdown', aria-expanded='false')
                  img.user-image(src='img/avatar.png', alt='User Image')
                  span.hidden-xs #{user.name}
                ul.dropdown-menu
                  // User image
                  li.user-header
                    img.img-circle(src='img/avatar.png', alt='User Image')
                    p
                      | #{user.email}
                  // Menu Body
                  li.user-body
                    // /.row
                  // Menu Footer
                  li.user-footer
                    .pull-left
                      a.btn.btn-default.btn-flat(href='userprofile') Profile
                    .pull-right
                      a.btn.btn-default.btn-flat(href='logout') Sign out

      // Left side column. contains the logo and sidebar
      aside.main-sidebar
        // sidebar: style can be found in sidebar.less
        section.sidebar
          // sidebar menu: : style can be found in sidebar.less
          ul.sidebar-menu(data-widget='tree')
            li.header MAIN NAVIGATION
            li
              a(href='/')
                i.fa.fa-th
                span HOME
            li
              a(href='/tournament')
                i.fa.fa-th
                span Tournaments
            li
              a(href='/user')
                i.fa.fa-th
                span Members

        // /.sidebar
      // Content Wrapper. Contains page content
      .content-wrapper
        // Content Header (Page header)
        section.content-header
          h1
            | Tournaments
            small Matches
        // Main content
        section.content
          // Main row
          .row
            // Left col
            section.col-md-3
              // Profile Image
              .box.box-primary
                .box-body.box-profile
                  img.profile-user-img.img-responsive.img-circle(src='img/tour.jpg', alt='tournamentPic')
                  h3.profile-username.text-center #{tournament.name}
                  p.text-muted.text-center #{tournament.date} &nbsp;&nbsp; #{tournament.time}
                  ul.list-group.list-group-unbordered
                    li.list-group-item
                      b Status
                      a.pull-right #{tournament.status}
                    li.list-group-item
                      b Game Type
                      a.pull-right #{tournament.gameType}
                    li.list-group-item
                      b Total Matches
                      a.pull-right 0
                    li.list-group-item
                      b participents
                      a.pull-right #{tournament.players.length}

                // /.box-body
              // /.box
            .col-lg-6
                .box
                  .box-header
                    h3.box-title Match history
                  // /.box-header
                  .box-body
                    table#example2.table.table-bordered.table-hover
                      thead
                        tr
                          th Player1
                          th Player2
                          th Result
                          th ELO Before
                          th ELO of opponent
                          th ELO after
                          th ELO Opponent after
                      tbody

            .col-lg-3
                .box
                  .box-header
                    h3.box-title Participents List
                  // /.box-header
                  .box-body
                    table#example2.table.table-bordered.table-hover
                      thead
                        tr
                          th Name
                          th Email
                      tbody
                        each row in tournament.players
                          tr
                            td #{row.name}
                            td #{row.email}
    // ./wrapper
